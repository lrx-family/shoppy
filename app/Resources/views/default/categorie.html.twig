{% extends 'base.html.twig' %}

{% block body %}

    <h1>Liste des cat√©gories</h1>

    <div>
        <a href="#">Ajouter un nouveau rayon</a>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th> Rayon :</th>
        </tr>
        </thead>
        <tbody>
        {% for cat in categories %}
            <tr>
                <td>{{ cat.label }}</td>
                <td><a href="{{ path('app_delete_category', {id: cat.id}) }}"
                       onclick="return confirmDelete('{{ cat.label }}');"
                    >Delete</a></td>


            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}

{% block stylesheets %}

{% endblock %}
{% block javascripts %}
    <script>
        function confirmDelete(label) {
            var message = 'Confirmer la suppression de ' + label;
            return confirm(message);
        }
    </script>
{% endblock %}
